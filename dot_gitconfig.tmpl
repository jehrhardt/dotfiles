[pull]
	rebase = true
[user]
	email = {{ .git.user.email }}
	name = Jan Ehrhardt
  signingkey = ~/.ssh/id_ed25519
[init]
	defaultBranch = main
[commit]
	gpgsign = true
[core]
  autocrlf = input
  pager = delta
[interactive]
  diffFilter = delta --color-only
[delta]
    navigate = true
  dark = true
[merge]
  conflictstyle = zdiff3
[gpg]
  format = ssh
